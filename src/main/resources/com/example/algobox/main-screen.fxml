<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.algobox.AlgoBoxController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="algBox" text="AlgoBox"/>

    <Button fx:id="vizButton" text="Visualize Sorting Algorithm" onAction="#switchToVisualizerScene"/>
    <Button fx:id="pracButton" text="Practice Data Structure" onAction="#switchToPracticeScene"/>
    <Button fx:id="exitButton" text="Exit" onAction="#onExitButtonClick"/>

</VBox>
